@*nhan dien cac file trong thu muc Models*@
@using personal_project.Models
@using X.PagedList.Mvc.Core
@*khai bao kieu du lieu cua Model*@
@model X.PagedList.IPagedList<ItemUser>
@{
    // import file Layout.cshtml vào đây
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
<div class="col-md-12">
    <div style="margin-bottom:5px;">
        <a href="/Admin/Users/Create" class="btn btn-primary">Create</a>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading text-dark">List User</div>
        <div class="panel-body">
            <table class="table table-bordered table-hover text-dark">
                <tr>
                    <th>Fullname</th>
                    <th>Username</th>
                    <th style="width:150px;"></th>
                </tr>
                @foreach(var row in Model)
                {
                    <tr>
                        <td>@row.Name</td>
                        <td>@row.Username</td>
                        <td style="text-align: center;">
                            <a href="/Admin/Users/Update/@row.Id">Edit</a>&nbsp;
                            <a href="/Admin/Users/Delete/@row.Id" onclick="return window.confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                }
            </table>
            <style type="text/css">
                .pagination-gutter {
                    padding: 0px;
                    margin: 0px;
                }
            </style>
            @*phân trang bằng tay*@
            @*Số trang*@
            @Html.PagedListPager(Model, page => Url.Action("Read", new { page = page, a = 1, b = 2 }) )
        </div>
    </div>
</div>